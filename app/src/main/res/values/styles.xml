<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.FullScreen" parent="Theme.AppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="toolbarName">
        <item name="fontFamily">@font/exo</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="TopRoundedShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16sp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="TopRoundedCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/TopRoundedCardViewStyle</item>
    </style>

    <style name="roundedImageBackground">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="DialogOpeningAnimation" parent="android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/Animation.Window</item>
    </style>

    <style name="Animation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_up_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_down_anim</item>
    </style>

    <style name="ShapeAppearanceDrawerItem" parent="Widget.MaterialComponents.NavigationView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>